<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity"
    android:background="@color/light_blue">

    <ImageView
        android:id="@+id/ivTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_ariel_temp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DocMedic"
        android:textColor="@color/dark_blue"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/tvTitle"
        android:layout_below="@id/ivTop"
        android:textSize="36sp"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <include
        android:id="@+id/layoutEtPhoneNumber"
        layout="@layout/blue_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="25dp"/>

    <include
        android:id="@+id/layoutEtEmployeeNum"
        layout="@layout/blue_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layoutEtPhoneNumber"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="25dp"/>

    <include
        android:id="@+id/layoutBtnLogin"
        layout="@layout/blue_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layoutEtEmployeeNum"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="45dp" />

    <include
        android:id="@+id/layoutBtnRegister"
        layout="@layout/blue_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layoutBtnLogin"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="25dp" />

</RelativeLayout>